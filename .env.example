# PostgreSQL Database Configuration
POSTGRES_USER=similarhub_user
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_DB=similarhub_db

# pgAdmin Configuration
PGADMIN_EMAIL=admin@similarhub.local
PGADMIN_PASSWORD=change_this_password_too

# Flask Application
FLASK_SECRET_KEY=change_this_to_a_random_secret_key
FLASK_DEBUG=0
APP_ENV=production

# Database URL (automatically constructed, don't change unless needed)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# TMDB Image URL (optional, defaults if not set)
TMDB_IMAGE_URL=https://image.tmdb.org/t/p/w500
